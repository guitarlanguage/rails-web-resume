<section class="main-section">
    <h1>Contact</h1>

        <div class="create">
            <div class="container">   
            
              
                <%= form_for(@message) do |f| %>  
     
                    <label for="name">Name</label>
                    <%= f.text_field :name, :placeholder => 'Mark Smith' %> 

                    <label for="email">Email</label>
                    <%= f.text_field :email, :placeholder => 'your-email@example.com' %> 

                    <label for="message">Message</label>
                    <%= f.text_area :content, :placeholder => 'yabba dabba do!' %> 
                    
                    <div class="actions"> 
                        <%= f.submit "Submit" %> 
                    </div> 
                <% end %>
            </div>
        </div>

</section>